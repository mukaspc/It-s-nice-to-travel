---
import Layout from "../../../layouts/Layout.astro";
import PlansContainer from "../../../components/plans/PlansContainer.astro";
import { GenerationProgress } from "../../../components/plans/GenerationProgress";

const { planId } = Astro.params;

if (!planId) {
  return Astro.redirect('/plans');
}
---

<Layout title="Generating Plan">
  <PlansContainer>
    <GenerationProgress client:load planId={planId} />
  </PlansContainer>
</Layout> 